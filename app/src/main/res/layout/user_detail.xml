<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    android:orientation="vertical">
    <!--头像-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Detail_Image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="3"
            android:src="@drawable/head" />

        <Button
            android:id="@+id/Detail_UploadImage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="5"
            android:background="@drawable/bt_shape_2"

            android:gravity="center"
            android:inputType="text"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:text="选择头像"
            android:textColor="#2fa881"
            android:textCursorDrawable="@drawable/bg_input_cursor_2"
            android:textSize="13sp" />
    </LinearLayout>

    <!--用户名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="用户名:" />

        <EditText
            android:id="@+id/Detail_Username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:hint="最长6位" />
    </LinearLayout>
    <!--密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="密码:" />

        <EditText
            android:id="@+id/Detail_Password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:hint="输入长度8~20位"
            android:inputType="textPassword" />
    </LinearLayout>
    <!--身份证号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="2"
            android:gravity="center"
            android:text="身份证号:" />

        <EditText
            android:id="@+id/Detail_IdCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:hint="输入长度18位" />
    </LinearLayout>
    <!--电话-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="2"
            android:gravity="center"
            android:text="电话/手机:" />

        <EditText
            android:id="@+id/Detail_Phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" />
    </LinearLayout>
    <!--真实姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="2"
            android:gravity="center"
            android:text="真实姓名:" />

        <EditText
            android:id="@+id/Detail_RealName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" />
    </LinearLayout>

    <!--学校-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="2"
            android:gravity="center"
            android:text="学校:" />

        <EditText
            android:id="@+id/Detail_School"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" />
    </LinearLayout>

    <Button
        android:id="@+id/Detail_Next"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bt_shape_2"
        android:inputType="text"
        android:stateListAnimator="@drawable/state_list_animator_z"
        android:text="提交"
        android:textColor="#2fa881"
        android:textCursorDrawable="@drawable/bg_input_cursor_2"
        android:textSize="13sp" />

    <Button
        android:id="@+id/Detail_Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bt_shape_2"
        android:inputType="text"
        android:stateListAnimator="@drawable/state_list_animator_z"
        android:text="返回"
        android:textColor="#2fa881"
        android:textCursorDrawable="@drawable/bg_input_cursor_2"
        android:textSize="13sp" />

</LinearLayout>